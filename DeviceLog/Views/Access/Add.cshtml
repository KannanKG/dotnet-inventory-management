@model string[];
@{
    ViewData["Title"] = "Access Admin";
}
    <form method="get" asp-controller="Access" asp-action="Add">
        <div class="form-group">
            <div class="input-group mb-3">
                <select class="custom-select" id="Team" name="teamName">
                    @foreach (var id in Model)
                    {
                        <option value="@id">@id</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="deviceName">Team Owner Name</label>
            <input type="text" class="form-control" id="adminName" name="adminName" placeholder="Team Owner" required>
        </div>
        <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>
    </form>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger mt-3">@ViewBag.Message</div>
}